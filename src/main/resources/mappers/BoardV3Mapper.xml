<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.request.boardver3.BoardV3Mapper">
    <resultMap id="boardResultMap" type="com.ohgiraffers.request.boardver3.BoardV3DTO">
        <id property="boardId" column="board_id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="userActive" column="user_active"/>
        <result property="adminActive" column="admin_active"/>
    </resultMap>

    <select id="findAllBoards" resultMap="boardResultMap">
        SELECT
        board_id,
        name,
        description
        FROM board_v3
        ORDER by board_id
    </select>
    <select id="selectBoardById" parameterType="long" resultMap="boardResultMap">
        SELECT
        board_id,
        name,
        description,
        user_active,
        admin_active
        FROM board_v3
        WHERE board_id = #{boardId}

    </select>
</mapper>